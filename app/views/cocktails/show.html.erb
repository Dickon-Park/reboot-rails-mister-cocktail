<h2> <%= @cocktail.name %> </h2>

<% @cocktail.doses.each do |dose| %>
  <h3> <%= "#{dose.description} => #{dose.ingredient.name}"%> </h3>
   <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
  <% end %>
<% end %>
 
  
<h2> Create a new dose!</h2>
<%= render "doses/new", cocktail: @cocktail, dose: @dose %>
<%= link_to "Delete #{@cocktail.name}",
            cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to "back to the cocktails", cocktails_path %>
